{
  "name": "venture",
  "version": "0.5.0",
  "description": "Choose-Your-Own Conference Presentation Software",
  "license": "MIT",
  "config": {
    "buildDir": "../priv/static",
    "buildDirTests": "./build_tests",
    "devHost": "localhost",
    "devPort": 8000
  },
  "scripts": {
    "build": "NODE_ENV=production npm run webpack",
    "clean": "rimraf $npm_package_config_buildDir && mkdir $npm_package_config_buildDir",
    "env": "env",
    "lint": "eslint --ext .js --ext .jsx ./app ./webpack && echo No linting errors.",
    "prebuild": "npm run clean",
    "pretest": "npm install && npm run lint",
    "pretest-travis": "npm install && npm run lint",
    "start": "NODE_ENV=development node dev-server ./webpack/config",
    "test": "NODE_ENV=test karma start",
    "test-travis": "NODE_ENV=test karma start --single-run",
    "webpack": "webpack --colors --progress --config ./webpack/config"
  },
  "dependencies": {
    "classnames": "^2.2.1",
    "flux": "^2.1.1",
    "global": "^4.3.0",
    "highlight.js": "^9.0.0",
    "immutable": "^3.7.6",
    "keymirror": "^0.1.1",
    "marked": "^0.3.5",
    "normalize.css": "^3.0.3",
    "react": "^0.14.3",
    "react-dom": "^0.14.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.2.1",
    "babel-core": "^5.8.34",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.1",
    "babel-plugin-rewire": "^0.1.23-beta-3",
    "babel-runtime": "^5.8.25",
    "chai": "^3.0.0",
    "css-loader": "^0.23.1",
    "es6-weak-map": "^2.0.1",
    "eslint": "^1.9.0",
    "eslint-plugin-react": "^3.12.0",
    "extract-text-webpack-plugin": "^0.9.1",
    "file-loader": "^0.8.4",
    "glob": "^6.0.1",
    "html-loader": "^0.4.0",
    "json-loader": "^0.5.3",
    "karma": "^0.13.15",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "0.1.1",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-sinon": "^1.0.4",
    "karma-source-map-support": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.5.1",
    "lodash": "^3.10.0",
    "mocha": "^2.2.5",
    "mocha-loader": "^0.7.1",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.3.3",
    "opn": "^3.0.2",
    "phantomjs": "^1.9.17",
    "postcss": "^5.0.13",
    "postcss-loader": "^0.8.0",
    "react-transform-hmr": "^1.0.1",
    "rimraf": "^2.4.5",
    "sass-loader": "^3.0.0",
    "sinon": "^1.15.4",
    "source-map-support": "^0.4.0",
    "style-loader": "^0.13.0",
    "template-html-loader": "0.0.3",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "globals": {
      "describe": true,
      "it": true,
      "sinon": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "no-alert": 0,
      "no-underscore-dangle": 0,
      "jsx-quotes": 1,
      "react/display-name": 0,
      "react/jsx-no-undef": 1,
      "react/jsx-sort-props": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-did-mount-set-state": 1,
      "react/no-did-update-set-state": 1,
      "react/no-multi-comp": 1,
      "react/no-unknown-property": 1,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 1,
      "react/self-closing-comp": 1,
      "react/wrap-multilines": 1
    }
  }
}
